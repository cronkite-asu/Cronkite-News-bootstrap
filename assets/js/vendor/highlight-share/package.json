        "eslint-plugin-import": "^2.2.0",
        "gulp": "^3.9.1",
        "gulp-cssnano": "^2.1.2",
        "gulp-eslint": "^3.0.1",
        "gulp-less": "^3.3.0",
        "gulp-uglify": "^2.0.0",
        "jsdom": "^9.9.1",
        "mocha": "^3.2.0",
        "nyc": "^10.0.0",
        "rollup-plugin-babel": "^2.7.1",
        "rollup-stream": "^1.16.0",
        "sinon": "^1.17.7",
        "sinon-chai": "^2.8.0",
        "vinyl-buffer": "^1.0.0",
        "vinyl-source-stream": "^1.1.0"
    }
