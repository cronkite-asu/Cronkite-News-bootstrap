        "highlight",
        "medium",
        "popover",
        "selection",
        "share",
        "sharepoint",
        "sharing",
        "text"
    ],
    "main": "dist/highlight-share.js",
    "module": "src/highlight-share.js",
    "author": {
        "name": "Liz Shaw",
